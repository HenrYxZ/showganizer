<% unless @episode.link_episodes.blank? %>
  <% @episode.link_episodes.each do |link| %>
  <tr>
    <div class="new-link">
      <%=link_to link.link_text, url_with_protocol(link.link_text), :target=>:blank%>
      <%=link_to 'Edit link', edit_episode_link_episode_path(@episode.id,link.id) if link.user===current_user %>
      <%=link_to 'Delete link', [@episode, link], method: :delete, data: { confirm: 'Are you sure?' } if link.user===current_user %>
    </div>
  </tr>
  <% end %>
<%else%>
  This show don't haven links
<% end %>