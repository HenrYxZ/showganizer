<h1>Listing seasons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th>Number</th>
      <th>Series</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.name %></td>
        <td><%= season.start_date %></td>
        <td><%= season.end_date %></td>
        <td><%= season.description %></td>
        <td><%= season.number %></td>
        <td><%= season.series.name %></td>
        <td><%= link_to 'Show', [@parent, season] %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@parent, season]) %></td>
        <td><%= link_to 'Destroy', [@parent, season], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Season', new_polymorphic_path([@parent, :season]) %>
