<%= form_for([@parent, @movie], :html => {:multipart => true}) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :name, data: {validate: "required"} %>
  </div>
  <div class="field">
    <%= f.label "Release date" %><br>
    <%= f.text_field :release_date %>
  </div>
  <div class="field">
    <%= f.label "Description" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :number %><br>
    <%= f.number_field :number, min: 1 %>
  </div>
  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, get_all_categories, :prompt => 'Elige una',
    data: {validate: "required"} %>
  </div>
  <div class="field">
    <%= f.label "Pictures"%><br>
    <%= f.file_field :photo_movies, multiple: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
