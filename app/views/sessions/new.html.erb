<% content_for :login_box do %>
<div></div>
<% end %>
<div id="new-session">

	<h1>Log in</h1>	

	<%# al no tener un recurso, la URL a la que nos lleve el formulario
	no será a la acción create, sino a la misma URL actual (session/new) %>
	<%= form_for :session, url: session_path do |f| -%>
		<div class="field">
			<%= f.text_field :email, value: params[:session].try(:[], :email), placeholder: "E-mail" %>
		</div>
		<div class="field">
			<%= f.password_field :password, placeholder: "Password" %>
		</div>
		<div class="actions">
			<%= f.submit "Log in", class: "btn" %>
		</div>
	<% end -%>
	<div>
		<%= link_to "Sign in", new_user_path, class: "a" %>
	</div>
</div>